@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrunler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group " method="post">
    <div>
        <label>Ürün Ad</label>
        <input name="URUNAD" class="form-control" type="text" required=""/>
    </div>
    <div>
        <label>Marka</label>
        <input name="MARKA" class="form-control" type="text" />
    </div>
    <div>
        <label>Ürün Kategori</label>
       @Html.DropDownListFor(m=>m.TBLKATEGORİLER.KATEGORİID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input name="FİYAT" class="form-control" type="text" />
    </div>
    <div>
        <label>Stok</label>
        <input name="STOK" class="form-control" type="text" />
    </div>
    <br />
    <button class="btn btn-info">Ürün Ekle</button>







    </form>
