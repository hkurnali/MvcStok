@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN AD</th>
            <th>MARKA</th>
            @*<th>ÜRÜN KATEGORİ</th>*@
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>
    @foreach (var urn in Model)
    {
        <tbody>

        <th>@urn.URUNID</th>
        <td>@urn.URUNAD</td>
        <td>@urn.MARKA</td>
        @*<td>@urn.TBLKATEGORİLER.KATEGORİAD</td>*@
        <td>@urn.FİYAT</td>
        <td>@urn.STOK</td>
        <td> <a href="/Urunler/SIL/@urn.URUNID" class="btn btn-danger">Sil</a></td>
        <td> <a href="/Urunler/UrunGetir/@urn.URUNID" class="btn btn-success">Güncelle</a></td>


        </tbody>


    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Urunler/YeniUrunler/" class="btn btn-primary">Yeni Ürün Ekle</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>