@model MvcStok.Models.Entity.TBLMUSTERİLER
@{
    ViewBag.Title = "YeniMusteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group " method="post">
    <div>
        <label> Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERİAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERİAD, "", new { @style = "color:red" })
        <div>
            <label> Müşteri Soyad</label>
            <input type="text" class="form-control" name="MUSTERİSOYAD" />
        </div>
        <br />
        <div>
            <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
        </div>
        <script>
            $('#btn1').click(function () {
                alert('Müşteri Eklendi');
            });
        </script>


</form>
